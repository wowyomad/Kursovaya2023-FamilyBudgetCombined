<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane prefHeight="463.0" prefWidth="725.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.gnida.fxmlcontroller.AuthorizeController" stylesheets="css/DarkTheme.css">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="148.0" minHeight="10.0" prefHeight="148.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="217.0" minHeight="10.0" prefHeight="56.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="208.0" minHeight="10.0" prefHeight="48.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="228.0" minHeight="10.0" prefHeight="94.0" valignment="CENTER" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="184.0" minHeight="0.0" prefHeight="41.0" valignment="CENTER" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="80.0" minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <TextField fx:id="loginField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               onKeyTyped="#hideErrors" prefHeight="35.0" prefWidth="160.0" promptText="Логин"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS"/>
    <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                   minWidth="-Infinity" onKeyTyped="#hideErrors" prefHeight="35.0" prefWidth="160.0" promptText="Пароль"
                   GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>

    <Label fx:id="errorMessage" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
           maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="300.0" text="Ошибка" textAlignment="CENTER"
           textFill="RED" visible="false" GridPane.halignment="CENTER" GridPane.rowIndex="4"
           GridPane.valignment="BOTTOM">
        <font>
<Font size="14.0"/>
        </font>
    </Label>

    <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="150.0"
           prefWidth="725.0" text="Авторизация" GridPane.halignment="CENTER" GridPane.valignment="CENTER"
           GridPane.vgrow="ALWAYS">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>
    <Button fx:id="backButton" mnemonicParsing="false" prefHeight="23.0" prefWidth="51.0" text="Выход"
            GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.valignment="BOTTOM">
        <GridPane.margin>
         <Insets bottom="15.0" left="15.0"/>
        </GridPane.margin>
    </Button>
    <HBox alignment="BOTTOM_CENTER" prefHeight="109.0" prefWidth="725.0" spacing="25.0" GridPane.halignment="CENTER"
          GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onRegisterClicked" prefHeight="53.0"
                prefWidth="111.0" text="Регистрация"/>
        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginClicked" prefHeight="53.0"
                prefWidth="111.0" text="Вход"/>
    </HBox>
</GridPane>
