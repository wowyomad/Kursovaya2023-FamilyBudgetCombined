<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>


<GridPane prefHeight="494.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.gnida.fxmlcontroller.admin.HomeAdminController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints/>
      <RowConstraints minHeight="70.0" prefHeight="100.0" vgrow="SOMETIMES"/>
      <RowConstraints minHeight="70.0" prefHeight="100.0" vgrow="SOMETIMES"/>
      <RowConstraints minHeight="70.0" prefHeight="100.0" vgrow="SOMETIMES"/>
      <RowConstraints minHeight="70.0" prefHeight="100.0" vgrow="SOMETIMES"/>
      <RowConstraints minHeight="70.0" prefHeight="100.0" vgrow="SOMETIMES"/>
   </rowConstraints>
   <Button fx:id="usersButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Пользователи" GridPane.halignment="CENTER"
           GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
   <Button fx:id="budgetsButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Бюджеты" GridPane.halignment="CENTER"
           GridPane.rowIndex="2"/>
   <Button fx:id="transactionsButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Транзакции" GridPane.halignment="CENTER"
           GridPane.rowIndex="3">
      <GridPane.margin>
         <Insets/>
      </GridPane.margin>
   </Button>
   <Button fx:id="reportsButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Отчет по операциям"
           GridPane.halignment="CENTER" GridPane.rowIndex="4"/>

   <Button fx:id="backButton" alignment="BOTTOM_LEFT" contentDisplay="CENTER" mnemonicParsing="false"
           onAction="#onBackButtonClick" text="Назад" GridPane.halignment="LEFT" GridPane.rowIndex="5"
           GridPane.valignment="BOTTOM">
      <GridPane.margin>
         <Insets bottom="15.0" left="15.0"/>
      </GridPane.margin>
   </Button>
   <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" prefWidth="800.0" text="Главное меню"
          textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
      <font>
         <Font size="48.0"/>
      </font>
   </Label>
</GridPane>
