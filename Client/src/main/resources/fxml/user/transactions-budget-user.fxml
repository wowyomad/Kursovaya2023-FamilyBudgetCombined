<?xml version="1.0" encoding="UTF-8"?>

<?import com.gnida.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.*?>
<GridPane minHeight="600" minWidth="900" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gnida.fxmlcontroller.user.TransactionsUserController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="200.0" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="400.0" minHeight="10.0" prefHeight="325.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="0.0" prefHeight="100.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <TableView fx:id="tableView" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" prefHeight="350.0" prefWidth="800.0" GridPane.halignment="CENTER"
               GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <columns>
            <PTableColumn fx:id="idColumn" text="id" percentageWidth="0.08"/>
            <PTableColumn fx:id="dateColumn" text="Дата" percentageWidth="0.11"/>
            <PTableColumn fx:id="amountColumn" text="Сумма" percentageWidth="0.15"/>
            <PTableColumn fx:id="categoryColumn" text="Категория" percentageWidth="0.15"/>
            <PTableColumn fx:id="commentColumn" text="Комментарий" percentageWidth="0.20"/>
            <PTableColumn fx:id="userColumn" text="Пользователь" percentageWidth="0.11"/>
            <PTableColumn fx:id="budgetColumn" text="Бюджет" percentageWidth="0.20"/>
        </columns>
    </TableView>
    <Button fx:id="backButton" mnemonicParsing="false" text="Назад" GridPane.halignment="LEFT" GridPane.rowIndex="2"
            GridPane.valignment="BOTTOM">
        <GridPane.margin>
            <Insets bottom="15.0" left="15.0"/>
        </GridPane.margin>
    </Button>
</GridPane>

